# show the 'halt' dialogue

"terminator --title 'HALT ?' -x ~/bin/halt-prompt"
	control+shift + q

# sound levels with ^Ins and ^Del

"amixer -c 0 set Master 3-"
	Control + Mod2 + Delete

"amixer -c 0 set Master 3+"
	Control + Mod2 + Insert

# sound levels with multimedia buttons

"amixer -c 0 set Master 3- && sleep 0.2"
	Mod2 + XF86AudioLowerVolume

"amixer -c 0 set Master 3+ && sleep 0.2"
	Mod2 + XF86AudioRaiseVolume

# mpd music control

"ncmpcpp toggle"
	Mod2 + XF86AudioPlay

"ncmpcpp stop"
	Mod2 + XF86AudioStop

"ncmpcpp next"
	Mod2 + XF86AudioNext

"ncmpcpp prev"
	Mod2 + XF86AudioPrev

"terminator --profile=music -x ncmpcpp"
	Control+Alt+Mod2 + m

# file manager

"terminator --title filemanager -x ranger"
	Mod2+Mod4 + f

# info bar mode switching

"echo 'mode1' > /tmp/clis-mode"
	Mod2 + Mod4 + F1
"echo 'mode2' > /tmp/clis-mode"
	Mod2 + Mod4 + F2
"echo 'mode3' > /tmp/clis-mode"
	Mod2 + Mod4 + F3
"echo 'mode4' > /tmp/clis-mode"
	Mod2 + Mod4 + F4
"echo 'mode5' > /tmp/clis-mode"
	Mod2 + Mod4 + F5

# commonly used applications

"geany"
	Super_L + Mod4 + e

"google-chrome"
	Super_L + Mod4 + w

"terminator"
	Shift + Mod4 + Return

"viewnior"
	Super_L + Mod4 + v

"terminator --title unmounter -x cun"
	Control + Alt + u

# scrot the screen, move it to images, place the file path in clipboard, and open the image for viewing
"scrot '%Y%m%d-%s.png' -e 'mv $f ~/images/scrot/ && echo ~/images/scrot/$f | xclip -sel clip && viewnior ~/images/scrot/$f'"
	Mod4 + Print

"xfce4-screenshooter"
	Print

"terminator --title networks -x wicd-curses"
	Super_L + Mod4 + n

"terminator --title 'calendar and todo' -e calcurse"
	Control+Alt+Mod2 + c

"cb-lock"
	Control + Alt + l

"connect3G > /tmp/clis-notify"
    Control + Alt + 3 

"sxiv ~/images/wallpapers/*"
	Mod2+Mod4 + i
