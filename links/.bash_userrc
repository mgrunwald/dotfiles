# helper functions for speedy git use
gg() {
command=$1
case $command in
    log)
        # grab the days value or default to 1
        days=${2-1}
        git --no-pager log --pretty=format:"%ar by %an (%h):%n  %s%n" --since "$days days ago"
        ;;
    *)
        echo -e "git helper commands:\n"
        echo -e "  log <days>: pretty list of the last <days> changes."
        ;;
esac
}
