general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order  = "wireless wlp4s0"
order += "ethernet enp0s31f6"
order += "battery 0"
order += "battery 1"
order += "cpu_temperature 0"
order += "cpu_temperature 1"
order += "cpu_temperature 2"
order += "cpu_temperature 3"
order += "load"
order += "time"
order += "path_exists dirvish"

path_exists dirvish {
        format = " B A C K U P "
        format_down = ""
        path = /tmp/dirvish
}

wireless wlp4s0 {
        format_up = "%essidâ€‰%qualityâ€‰%ip"
        format_down = "W: down"
}

ethernet enp0s31f6 {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
	    format_down = ""
}

battery 0 {
        format = "%percentageâ€‰%remaining"
}

battery 1 {
        format = "%statusâ€‰%percentageâ€‰%remaining"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

time {
	format = "%Y-%m-%d %H:%M:%S"
}

load {
	format = "%1min"
}

